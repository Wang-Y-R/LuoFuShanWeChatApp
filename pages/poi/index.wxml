<view class="container">
  <view>
    <input placeholder="搜索" value="{{searchQuery}}" bindinput="onInput" />
  </view>
  <view style="display:flex;gap:16rpx;padding:16rpx 0;">
    <block wx:for="{{tabs}}" wx:key="index">
      <view data-index="{{index}}" bindtap="onTab" style="padding:12rpx 24rpx;border-radius:9999rpx;background-color:{{activeTab==index?'#07c160':'#efefef'}};color:{{activeTab==index?'#fff':'#333'}};">
        {{item}}
      </view>
    </block>
  </view>
  <block wx:for="{{list}}" wx:key="id">
    <view class="card" style="margin-bottom:16rpx;">
      <image src="{{item.cover}}" mode="aspectFill" style="width:100%;height:240rpx" />
      <view class="card-body">
        <view style="display:flex;justify-content:space-between;align-items:center;">
          <text>{{item.name}}</text>
          <text>评分 {{item.rating}}</text>
        </view>
        <view style="display:flex;gap:12rpx;margin-top:12rpx;">
          <button class="btn" size="mini" data-id="{{item.id}}" bindtap="onDetail">详情</button>
          <button class="btn-secondary" size="mini" data-id="{{item.id}}" bindtap="onFav">{{item.fav?'已收藏':'收藏'}}</button>
          <button class="btn-navigate" size="mini" data-lat="{{item.lat}}" data-lng="{{item.lng}}" bindtap="onNavigate">导航</button>
        </view>
      </view>
    </view>
  </block>
</view>
