<view class="container">
  <image src="{{detail.cover}}" mode="aspectFill" style="width:100%;height:320rpx" />
  <view class="section-title">{{detail.name}}</view>
  <view style="color:#666;">营业时间 {{detail.hours}}</view>
  <view style="margin-top:16rpx;">{{detail.desc}}</view>
  <view style="display:flex;gap:12rpx;margin-top:16rpx;">
    <button class="btn" size="mini" bindtap="onFav">{{detail.fav?'已收藏':'收藏'}}</button>
    <button class="btn-navigate" size="mini" bindtap="onNavigate">导航</button>
  </view>
</view>
