.card + .card {
  margin-top: 16rpx;
}

/* 兑换成功弹窗 */
.redeem-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.redeem-modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 0;
  max-height: 80vh;
  overflow: hidden;
}

.redeem-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.redeem-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.redeem-modal-close {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.redeem-item-info {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.redeem-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.redeem-item-details {
  flex: 1;
  min-width: 0;
}

.redeem-item-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.redeem-item-points {
  font-size: 26rpx;
  color: #666;
}

.redeem-code-section {
  padding: 24rpx;
}

.redeem-code-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.redeem-code-display {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.redeem-code-text {
  flex: 1;
  font-family: 'Courier New', monospace;
  font-size: 32rpx;
  font-weight: 500;
  color: #07c160;
  letter-spacing: 2rpx;
}

.code-copy-btn {
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  margin-left: 16rpx;
}

.redeem-code-notice {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.redeem-modal-actions {
  padding: 16rpx 24rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-confirm {
  width: 100%;
  height: 80rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}