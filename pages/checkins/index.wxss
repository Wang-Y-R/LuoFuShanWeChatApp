.card + .card {
  margin-top: 16rpx;
}
.card-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.row {
  display: grid;
  grid-template-columns: 1fr auto;
  align-items: center;
}
.row-sub {
  color: #666;
}
.name {
  font-size: 30rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
