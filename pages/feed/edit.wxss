/* 容器 */
.container {
  height: 100vh;
  background: #f5f0e6;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.nav-bar {
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-left, .nav-right {
  color: #07c160;
  font-size: 32rpx;
  padding: 16rpx;
  font-weight: 600;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 0 20rpx;
}

/* 位置信息 */
.location-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 30rpx;
  color: #666;
}

/* 文本输入 */
.text-input-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.text-input {
  width: 100%;
  min-height: 120rpx;
  max-height: 300rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
}

.placeholder {
  color: #999;
}

.text-count {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片选择区域 */
.image-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item, .add-image-btn {
  position: relative;
  width: 196rpx;
  height: 196rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.image {
  width: 100%;
  height: 100%;
  transition: transform 0.2s ease;
}

.image-item:active .image {
  transform: scale(0.95);
}

.delete-btn {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.delete-btn:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.9);
}

.delete-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

.add-image-btn {
  background: #f8f9fa;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.add-image-btn:active {
  background: #e9ecef;
  border-color: #07c160;
  transform: scale(0.95);
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 提示信息 */
.tips {
  text-align: center;
  padding: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}
