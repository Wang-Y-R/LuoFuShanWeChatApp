<view class="container">
  <view class="section">
    <view class="section-header">
      <text>编辑内容</text>
      <text class="muted">位置：{{place || '未选择'}}</text>
    </view>
    <view>
      <textarea placeholder="写点什么..." value="{{text}}" bindinput="onInput" style="width:100%;min-height:160rpx;border:1rpx solid #e5e7eb;border-radius:12rpx;padding:12rpx;" />
    </view>
    <view style="margin-top:12rpx;display:flex;gap:12rpx;flex-wrap:wrap;">
      <block wx:for="{{images}}" wx:key="index">
        <image src="{{item}}" style="width:30%;height:200rpx;border-radius:12rpx;" mode="aspectFill" />
      </block>
    </view>
    <view class="actions">
      <button class="btn-secondary" bindtap="chooseImages">选择图片</button>
      <button class="btn" bindtap="publish">发布</button>
    </view>
  </view>
</view>
