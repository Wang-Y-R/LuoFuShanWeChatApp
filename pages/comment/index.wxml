<view class="container">
  <view class="card" style="margin-bottom:16rpx;">
    <view class="card-body">
      <view style="display:flex;align-items:center;gap:16rpx;">
        <image src="{{post.avatar}}" style="width:64rpx;height:64rpx;border-radius:50%" />
        <view style="flex:1;">
          <view>{{post.user}}</view>
          <view style="color:#666;">{{post.time}} · 位置：{{post.place || '未标注'}}</view>
        </view>
      </view>
      <view style="margin-top:12rpx;">{{post.content}}</view>
      <view style="display:flex;gap:8rpx;margin-top:12rpx;flex-wrap:wrap;">
        <image wx:for="{{post.photos}}" wx:key="index" src="{{item}}" style="width:32%;height:200rpx;border-radius:12rpx" mode="aspectFill" />
      </view>
    </view>
  </view>
  <view style="background:#fff;border-radius:12rpx;padding:16rpx;">
    <view style="display:flex;justify-content:space-between;align-items:center;">
      <text>评论（{{comments.length}}）</text>
    </view>
  </view>
  <block wx:for="{{comments}}" wx:key="id">
    <view class="card" style="margin-top:16rpx;">
      <view class="card-body">
        <view style="display:flex;gap:12rpx;align-items:center;">
          <image src="{{item.avatar}}" style="width:64rpx;height:64rpx;border-radius:50%" />
          <view style="flex:1;">
            <view>{{item.user}}</view>
            <view style="color:#666;">{{item.time}}</view>
          </view>
        </view>
        <view style="margin-top:12rpx;">{{item.content}}</view>
      </view>
    </view>
  </block>
  <view style="position:fixed;left:0;right:0;bottom:0;background:#fff;padding:12rpx;border-top:1rpx solid #eee;display:flex;gap:12rpx;">
    <input placeholder="写下你的评论" value="{{inputValue}}" bindinput="onInput" style="flex:1;padding:12rpx;border:1rpx solid #ddd;border-radius:8rpx;" />
    <button class="btn" size="mini" bindtap="onSubmit">发送</button>
  </view>
</view>
