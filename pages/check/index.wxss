.container .btn {
  flex: 1;
}
.section { background:#fff;border-radius:16rpx;padding:16rpx;box-shadow:0 8rpx 20rpx rgba(0,0,0,0.06);margin-bottom:16rpx; }
.section-header { display:flex;justify-content:space-between;align-items:center;margin-bottom:12rpx; }
.map-wrap { border:1rpx solid #e5e7eb;border-radius:12rpx;overflow:hidden; }
.map { width:100%; height:520rpx; }
.actions { display:flex;gap:12rpx;margin-top:12rpx; }
.actions .btn, .actions .btn-secondary { flex:1; }
.muted { color:#666;margin-top:12rpx; }
.more-link { color:#07c160; }

.feedback-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.feedback-box {
  width: 86%;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
}
.fb-title { font-size: 34rpx; font-weight: 700; margin-bottom: 8rpx; }
.fb-sub { color: #666; margin-bottom: 12rpx; display: block }
.fb-actions { display:flex; gap:12rpx; justify-content:center }

.place-item { padding: 12rpx 0; border-bottom: 1rpx solid #f1f1f1 }
.place-row { display:flex; justify-content:space-between; align-items:center }
.place-name { font-size: 30rpx; }
.place-dist { color: #999 }
