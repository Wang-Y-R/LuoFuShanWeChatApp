.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.select-wrap {
  position: relative;
}
.select {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 9999rpx;
  padding: 8rpx 12rpx;
  color: #333;
}
.chevron {
  color: #666;
}
.select-menu {
  position: absolute;
  right: 0;
  top: calc(100% + 8rpx);
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  min-width: 160rpx;
  z-index: 10;
}
.select-item {
  padding: 12rpx 16rpx;
  color: #333;
}
.select-item + .select-item {
  border-top: 1rpx solid #f3f4f6;
}
.location-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}
.loc-name {
  color: #666;
}
.loc-actions {
  display: flex;
  gap: 12rpx;
}
.link {
  color: #07c160;
}
.chips {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}
.chip {
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #333;
}
.chip-active {
  background: #07c160;
  color: #fff;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}
.card-body {
  display: flex;
  gap: 16rpx;
  align-items: center;
}
.thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}
.item-info {
  flex: 1;
}
.item-title {
  font-size: 32rpx;
  font-weight: 600;
}
.item-meta {
  margin-top: 8rpx;
}
.item-distance {
  color: #666;
  font-size: 28rpx;
}
.item-popularity {
  color: #999;
  font-size: 26rpx;
  margin-top: 6rpx;
  font-weight: 600;
}
.actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
  justify-content: flex-end; /* 右对齐：详情和导航并列靠右显示 */
  margin-top: 12rpx;
}

.btn-detail {
  background: linear-gradient(135deg, #07c160, #00a854);
  color: white;
  border-radius: 20rpx;
  font-weight: 600;
}

.btn-navigate {
  background: #f0f9ff;
  color: #0369a1;
  border: 1rpx solid #0ea5e9;
  border-radius: 20rpx;
  font-weight: 600;
}
