.section { background:#fff;border-radius:16rpx;padding:16rpx;box-shadow:0 8rpx 20rpx rgba(0,0,0,0.06);margin-bottom:16rpx; }
.section-header { display:flex;justify-content:space-between;align-items:center;margin-bottom:12rpx; }
.profile-edit { display:flex; flex-direction:column; gap:16rpx; align-items:flex-start; }
.avatar-wrapper { border:none; background:transparent; padding:0; }
.avatar { width:120rpx; height:120rpx; border-radius:50%; }
.nick-input { width:100%; border:1rpx solid #e5e7eb; border-radius:12rpx; padding:12rpx; }
.actions { display:flex; gap:12rpx; }
