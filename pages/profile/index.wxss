.card + .card {
  margin-top: 16rpx;
}
.profile-header {
  /* 更深、更饱和的鹅黄色渐变（用户要求：颜色深一点、饱和度高一点） */
  background: linear-gradient(135deg, #f0c554 0%, #f2c93a 50%, #fbf1c4 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  color: #1f2937;
}
.profile-card {
  display:flex;align-items:center;gap:16rpx;
}
.avatar { width:96rpx;height:96rpx;border-radius:50%; }
.info { flex:1; }
.name { font-size:32rpx;font-weight:600; }
.meta { color:#e6fffb; }
.quick-actions { display:flex;gap:16rpx;margin:16rpx 0; }
.qa-item { flex:1;background:#fff;border-radius:12rpx;padding:16rpx;display:flex;flex-direction:column;align-items:center;gap:8rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,0.06); }
.qa-icon { font-size:40rpx; }
.qa-text { color:#333; }
.list-item { display:flex;justify-content:space-between;align-items:center;padding:16rpx;background:#fff;border-radius:12rpx;margin-bottom:12rpx; }
.muted { color:#666; }
.more-link { color:#07c160;margin-bottom:16rpx; }
