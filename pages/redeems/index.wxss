.card + .card {
  margin-top: 16rpx;
}

/* Tab切换样式 */
.tab-container {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin: 16rpx 0;
  padding: 4rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #fff;
  color: #07c160;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 兑换码区域 */
.code-section {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-top: 12rpx;
}

.code-btn {
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  line-height: 1;
}

.code-btn:active {
  background: #06ad56;
}