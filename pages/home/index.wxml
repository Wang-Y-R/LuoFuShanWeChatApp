<view class="container">
  <view class="hero" bindtap="onHeroTap">
    <image src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=1600&q=80" mode="aspectFill" class="hero-img" />
    <view class="hero-overlay">
      <view class="hero-title">南昆山-罗浮山景区介绍</view>
      <view class="hero-sub">粤东名山，山峦叠翠，云海奇观，文化底蕴深厚</view>
    </view>
  </view>
  <view class="section">
    <view class="searchbar">
      <text class="search-icon">🔍</text>
      <input class="search-input" placeholder="搜索 景点/住宿/餐饮" value="{{searchQuery}}" bindinput="onInput" confirm-type="search" />
    </view>
  </view>
  <scroll-view scroll-x>
    <view class="chips">
      <block wx:for="{{categories}}" wx:key="index">
        <view class="chip {{activeCategory==index?'chip-active':''}}" data-index="{{index}}" bindtap="onSelectCategory">
          {{item}}
        </view>
      </block>
    </view>
  </scroll-view>
  <view class="section-title">精选内容</view>
  <view class="grid">
    <block wx:for="{{items}}" wx:key="id">
      <view class="card" data-id="{{item.id}}" bindtap="onCardTap">
        <image wx:if="{{item.type==='image'}}" src="{{item.src}}" mode="aspectFill" style="width:100%;height:240rpx" />
        <video wx:if="{{item.type==='video'}}" src="{{item.src}}" controls style="width:100%;height:240rpx" />
        <view class="card-body">{{item.title}}</view>
      </view>
    </block>
  </view>
  <!-- 在列表容器后面添加以下代码 -->

<!-- 加载更多指示器 -->
<view wx:if="{{loading}}" class="loading-container">
  <view class="loading-content">
    <text class="loading-text">加载中...</text>
    <!-- 可选：添加加载动画 -->
    <!-- <view class="loading-dots">
      <text>.</text><text>.</text><text>.</text>
    </view> -->
  </view>
</view>

<!-- 没有更多数据提示 -->
<view wx:if="{{noMoreData && items.length > 0}}" class="no-more-container">
  <text class="no-more-text">没有更多数据了</text>
</view>

<!-- 空状态提示 -->
<view wx:if="{{items.length === 0 && !loading && !isRefreshing}}" class="empty-container">
  <image class="empty-image" src="/images/empty.png" mode="aspectFit"></image>
  <text class="empty-text">暂无数据</text>
  <button wx:if="{{searchQuery}}" class="empty-button" bindtap="onClearSearch">清空搜索</button>
</view>

<!-- 下拉刷新指示器（系统自带，这里可以自定义样式） -->
</view>
