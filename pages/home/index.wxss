.search {
  margin-bottom: 16rpx;
}
.searchbar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #f5f7fa;
  border: 1rpx solid #e5e7eb;
  border-radius: 9999rpx;
  padding: 12rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}
.search-icon {
  color: #888;
  font-size: 28rpx;
}
.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
}
.hero {
  position: relative;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.hero-img {
  width: 100%;
  height: 100%;
}
.hero-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx;
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.35) 100%
  );
  color: #fff;
}
.hero-title {
  font-size: 36rpx;
  font-weight: 700;
}
.hero-sub {
  margin-top: 8rpx;
  color: #e6e6e6;
}
.chips {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
}
.chip {
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  background-color: #efefef;
  color: #333;
}
.chip-active {
  background-color: #07c160;
  color: #fff;
}
