.search {
  margin-bottom: 16rpx;
}
.searchbar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #f5f7fa;
  border: 1rpx solid #e5e7eb;
  border-radius: 9999rpx;
  padding: 12rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}
.search-icon {
  color: #888;
  font-size: 28rpx;
}
.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
}
.hero {
  position: relative;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.hero-img {
  width: 100%;
  height: 100%;
}
.hero-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx;
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.35) 100%
  );
  color: #fff;
}
.hero-title {
  font-size: 36rpx;
  font-weight: 700;
}
.hero-sub {
  margin-top: 8rpx;
  color: #e6e6e6;
}
.chips {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
}
.chip {
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  background-color: #efefef;
  color: #333;
}
.chip-active {
  background-color: #07c160;
  color: #fff;
}
/* 加载中样式 */
.loading-container {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  margin-right: 10rpx;
}

/* 加载动画点 */
.loading-dots {
  display: flex;
}

.loading-dots text {
  animation: dotBlink 1.4s infinite;
}

.loading-dots text:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots text:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotBlink {
  0%, 100% { opacity: 0.2; }
  50% { opacity: 1; }
}

/* 没有更多数据样式 */
.no-more-container {
  padding: 40rpx 0;
  text-align: center;
  color: #aaa;
  font-size: 26rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
}

.no-more-text {
  position: relative;
  padding: 0 40rpx;
}

.no-more-text::before,
.no-more-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30rpx;
  height: 1rpx;
  background-color: #eee;
}

.no-more-text::before {
  left: 0;
}

.no-more-text::after {
  right: 0;
}

/* 空状态样式 */
.empty-container {
  padding: 100rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.empty-button {
  background-color: #07c160;
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
}

.empty-button::after {
  border: none;
}

.empty-button:hover {
  background-color: #06ad56;
}