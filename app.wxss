page {
  background-color: #f7f8fa;
}
.container {
  padding: 16rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 24rpx 0 16rpx;
}
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}
.card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}
.card-body {
  padding: 16rpx;
}
.btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 12rpx;
}
.btn-secondary {
  background-color: #efefef;
  color: #333;
  border-radius: 12rpx;
}
.btn, .btn-secondary, .btn-navigate {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.btn-navigate {
  background-color: #e0f2fe;
  color: #0c4a6e;
  border-radius: 12rpx;
}
.card {
  border: 1rpx solid #e5e7eb;
}
