.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  display: flex;
  background: #fff;
  border-top: 1rpx solid #e5e7eb;
  padding: 6rpx 8rpx;
}
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  border-radius: 12rpx;
}
.tab-item.active {
  color: #07c160;
  background: #e6fff2;
  font-weight: 600;
}
.icon {
  font-size: 36rpx;
}
.label {
  font-size: 22rpx;
  margin-top: 6rpx;
}
